{
    "name": "itinerary-md",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "license": "UNLICENSED",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "npm run dev:all",
        "dev:all": "concurrently \"npm -w packages/core run dev\" \"npm -w packages/editor run pack:watch\" \"npm -w apps/studio run dev\"",
        "dev:studio": "npm -w apps/studio run dev",
        "preview": "npm -w apps/studio run preview",
        "typecheck": "npm -ws run typecheck --if-present",
        "lint": "biome check apps/studio/src packages/core/src packages/editor/src",
        "lint:fix": "biome check --write apps/studio/src packages/core/src packages/editor/src",
        "lint:unsafe": "biome check --write --unsafe apps/studio/src packages/core/src packages/editor/src",
        "format": "biome format --write apps/studio/src packages/core/src packages/editor/src",
        "format:check": "biome format --ci apps/studio/src packages/core/src packages/editor/src",
        "prepare": "husky",
        "test": "npm -ws run test --if-present",
        "test:watch": "npm -ws run test:watch --if-present",
        "build": "npm run build:deps && npm -w apps/studio run build",
        "build:deps": "npm -w packages/alert run build && npm -w packages/core run build && npm -w packages/editor run build",
        "clean": "git clean -xfd -e node_modules",
        "licenses:prod": "license-checker --production --json > THIRD_PARTY_LICENSES.json",
        "refactor:alias": "node scripts/refactor-imports-to-alias.mjs"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.3",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@cumuloworks/configs": "^1.0.5",
        "@vitest/coverage-v8": "^3.2.4",
        "concurrently": "^9.2.1",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "license-checker": "^25.0.1",
        "lint-staged": "^16.1.6",
        "tsc-alias": "^1.8.16",
        "vitest": "^3.2.4"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "biome check --write"
        ]
    }
}
