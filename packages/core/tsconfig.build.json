{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmitOnError": true
    },
    "include": ["src"],
    "exclude": [
        "src/**/__tests__/**",
        "src/**/*.test.*",
        "src/**/*.spec.*"
    ]
}
