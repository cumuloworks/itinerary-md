{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmitOnError": true
    },
    "include": ["src"],
    "exclude": [
        "src/**/__tests__/**"
    ]
}

