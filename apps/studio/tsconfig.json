{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@itinerary-md/core": ["../../packages/core/src"],
            "@itinerary-md/core/*": ["../../packages/core/src/*"]
        },
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "types": ["vitest/globals", "react", "react-dom", "@testing-library/jest-dom"]
    },
    "include": ["src", "@test", "types", "test/event-parser.test.ts", "test/time-parser.test.ts", "test/date-parser.test.ts"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
