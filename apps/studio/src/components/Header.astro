---
import { SiGithub } from 'react-icons/si';
import AboutButton from '@/components/AboutButton.tsx';
---

<header class="mb-4 px-8">
    <div class="flex items-center justify-between gap-4">
        <h1 class="text-4xl leading-tight text-blue-600 mr-auto">
            <a href="/" class="select-none cursor-default">
                <span class="font-semibold">TripMD</span> Studio
            </a>
        </h1>
        <div class="flex items-center gap-2">
            <button id="pwa-update" class="hidden rounded bg-blue-600 text-white px-3 py-1 text-sm">
                更新
            </button>
            <a
                href="https://github.com/cumuloworks/itinerary-md"
                target="_blank"
                rel="noopener noreferrer"
            >
                <SiGithub client:only="react" />
            </a>
            <AboutButton client:only="react" />
        </div>
    </div>
</header>
